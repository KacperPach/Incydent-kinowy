---

interface Props {
	tags: Array< string > | undefined;
}

const { tags } =  Astro.props;

---
<div>
    <ul class="card__tags"> {typeof tags !== "undefined" && (tags.map( tag => (
        <li class="tag__name">
            {tag}
        </li>
        ))) }
    </ul>
</div>

<style>
    .card__tags {
        overflow: auto;
        padding: 1em;
    }
    .tag__name {
        display: inline-block;
        color: #fff;
        font-size: 1.1em;
        background-color: var(--accent);
        padding: 6px 23px ;
        border-radius: 70em;
        margin: 8px 6px 8px 0;
        margin-left: 0px;
        position: relative;
        text-transform: lowercase;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
        box-shadow: 0px 0px 100px -63px rgba(66, 68, 90, 1);
    }
</style>

